{
  "manifest_version": 2,
  "name": "My Extension",
  "description": "A simple Chrome extension",
  "version": "1.0",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "<all_urls>",
    "notifications",
    "storage"
  ],
  "browser_action": {
    "default_title": "Get Page Content",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["jquery-3.6.4.js", "background.js"]
  }
}
